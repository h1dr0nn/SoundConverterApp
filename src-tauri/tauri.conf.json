{
  "$schema": "https://schema.tauri.app/config/1",
  "bundle": {
    "active": true,
    "windows": {
      "nsis": {
        "installerIcon": "icons/icon.ico",
        "displayLanguageSelector": false
      },
      "wix": {
        "language": "en-US"
      },
      "allowDowngrades": true
    },
    "icon": [
      "icons/32x32.png",
      "icons/128x128.png",
      "icons/128x128@2x.png",
      "icons/icon.icns",
      "icons/icon.ico",
      "icons/icon.png"
    ],
    "resources": [
      "binaries/**/*",
      "../backend/**/*"
    ],
    "macOS": {
      "entitlements": null,
      "exceptionDomain": "",
      "frameworks": [],
      "providerShortName": null,
      "signingIdentity": null
    },
    "fileAssociations": [
      {
        "ext": [
          "mp3",
          "wav",
          "flac",
          "m4a",
          "ogg",
          "aac",
          "aiff"
        ],
        "name": "Audio File",
        "role": "Viewer"
      }
    ]
  },
  "build": {
    "beforeDevCommand": "npm run dev",
    "beforeBuildCommand": "npm run build",
    "frontendDist": "../frontend/dist",
    "devUrl": "http://localhost:5173"
  },
  "productName": "HarmonixSE",
  "mainBinaryName": "harmonixse",
  "version": "1.0.3",
  "identifier": "com.h1dr0n.harmonixse",
  "plugins": {
    "updater": {
      "endpoints": [
        "https://github.com/h1dr0nn/SoundConverterApp/releases/latest/download/latest.json"
      ],
      "pubkey": ""
    }
  },
  "app": {
    "withGlobalTauri": false,
    "windows": [
      {
        "title": "Harmonix SE",
        "width": 1280,
        "height": 720,
        "minWidth": 900,
        "minHeight": 650,
        "resizable": true,
        "dragDropEnabled": false,
        "useHttpsScheme": true
      }
    ],
    "security": {
      "csp": null
    }
  }
}