{
  "$schema": "https://schema.tauri.app/config/1",
  "package": {
    "productName": "Harmonix SE",
    "version": "1.0.0"
  },
  "build": {
    "beforeDevCommand": "cd frontend && npm run dev",
    "beforeBuildCommand": "cd frontend && npm run build",
    "devPath": "http://localhost:5173",
    "distDir": "../frontend/dist",
    "withGlobalTauri": false
  },
  "tauri": {
    "allowlist": {
      "all": false,
      "fs": { "all": true, "scope": ["**"] },
      "dialog": { "all": true },
      "path": { "all": true },
      "shell": { "all": false, "execute": true, "sidecar": true }
    },

    "bundle": {
      "active": true,
      "targets": "all",
      "identifier": "com.h1dr0n.harmonixse",

      "resources": [
        "binaries/**/*"
      ]
    },

    "security": {
      "csp": null
    },

    "windows": [
      {
        "title": "Harmonix SE",
        "width": 1200,
        "height": 800,
        "resizable": true,
        "fileDropEnabled": false
      }
    ]
  }
}
